                                        <a href="#" data-id="@item.Id" class="add-to-cart-link btn-add-cart"><i class="fa fa-shopping-cart"></i> <localize>Add to cart</localize></a>
                                        <a href="@url" src="@(Configuration["BaseAddress"])" class="view-details-link"><i class="fa fa-link"></i> <localize>See details</localize></a>
                                    </div>
                                </div>
                                <h2><a href="single-product.html">@item.Name</a></h2>
                                <p>
                                    @item.Description
                                </p>
                                <div class="product-carousel-price">
                                    <a class="btn btn-primary" href="#">@item.Price</a>
                                </div>
                            </div>
                        }                       
                    </div>
                </div>
            </div>
        </div>

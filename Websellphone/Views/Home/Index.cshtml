            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title"><localize>Latest Products</localize></h2>
                    <div class="product-carousel">
                        @{
                            List<List<ProductViewModel>> featuredProducts = new List<List<ProductViewModel>>();
                            List<ProductViewModel> featuredPart = new List<ProductViewModel>();
                        }
                        @foreach (var item in Model.LatestProducts)
                        {
                            var url = $"/{culture}/{_loc["productUrl"]}/{item.Id}";
                            <div class="single-product img-responsive-wrap">
                                <div class="product-f-image">
                                    <a href="@url"> <img class="img-inner" src="@(Configuration["BaseAddress"] + item.ThumbnailImage) " alt="@item.Name" alt="@item.Name"></a>
